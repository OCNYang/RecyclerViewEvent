<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?attr/dividerVertical"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.ocnyang.recyclerviewevent.MainActivity">

    <android.support.v7.widget.AppCompatButton
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_item"
        android:onClick="showListView"
        android:text="List View （拖曳 + 滑动删除）"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_item"
        android:onClick="showGridView"
        android:text="Grid View（拖曳 + 固定首个）"/>


</LinearLayout>
